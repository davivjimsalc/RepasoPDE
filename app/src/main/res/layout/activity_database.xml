<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DatabaseActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:text="Buscar resultado por numero"
        app:layout_constraintBottom_toTopOf="@+id/etNumero"
        app:layout_constraintEnd_toEndOf="@+id/etNumero"
        app:layout_constraintStart_toStartOf="@+id/etNumero"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="5dp"
        android:text="Eliminar numero"
        app:layout_constraintBottom_toTopOf="@+id/bEliminar"
        app:layout_constraintStart_toStartOf="@+id/bBuscar"
        app:layout_constraintTop_toBottomOf="@+id/bBuscar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="193dp"
        android:layout_height="22dp"
        android:text="Cambiar numero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etNuevoNumero"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNumero"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Introduce el numero"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/bBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/etNuevoNumero"
        android:layout_width="237dp"
        android:layout_height="56dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Introduce nuevo numero"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/bCambiar"
        app:layout_constraintEnd_toEndOf="@+id/etNumero"
        app:layout_constraintStart_toStartOf="@+id/etNumero"
        app:layout_constraintTop_toBottomOf="@+id/bEliminar" />

    <Button
        android:id="@+id/bBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="40dp"
        android:onClick="bucarNumero"
        android:text="Buscar"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/etNumero"
        app:layout_constraintTop_toBottomOf="@+id/etNumero" />

    <Button
        android:id="@+id/bEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:onClick="eliminarNumero"
        android:text="Eliminar"
        app:layout_constraintBottom_toTopOf="@+id/etNuevoNumero"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/bCambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="240dp"
        android:onClick="actualizarNumero"
        android:text="Cambiar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etNuevoNumero"
        app:layout_constraintTop_toBottomOf="@+id/etNuevoNumero" />

    <Button
        android:id="@+id/bVolverDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="35dp"
        android:onClick="volver"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>