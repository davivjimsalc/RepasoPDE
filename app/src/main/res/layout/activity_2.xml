<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Activity2">

    <Button
        android:id="@+id/bVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="33dp"
        android:onClick="terminar"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="234dp"
        android:layout_height="31dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="105dp"
        android:hint="Resultado de la actividad 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bNotificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:onClick="mostrarNotificacion"
        android:text="Notificacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bAlarma"
        app:layout_constraintStart_toStartOf="@+id/bAlarma" />

    <Button
        android:id="@+id/bAlarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="35dp"
        android:onClick="programarAlarma"
        android:text="AlarmaNoRepeticion"
        app:layout_constraintBottom_toTopOf="@+id/bNotificacion"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bAlarmaRepticion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="programarAlarmaRepetitiva"
        android:text="AlarmaRepeticion"
        app:layout_constraintBaseline_toBaselineOf="@+id/bAlarma"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bCacelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:onClick="cancelarAlarmaRepetitiva"
        android:text="Cancelar Alarma"
        app:layout_constraintBottom_toTopOf="@+id/bAlarmaRepticion"
        app:layout_constraintStart_toStartOf="@+id/bAlarmaRepticion" />
</androidx.constraintlayout.widget.ConstraintLayout>